@model FigureFormViewModel
@{
	ViewBag.Title = "Create a Figure";
}

<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<div class="row">
	<div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
		<form asp-action="Add" method="post">
			<div class="mb-3">
				<label asp-for="@Model.Name" class="form-label-add-edit"></label>
				<input asp-for="@Model.Name" class="form-control" aria-required="true" />
				<span asp-validation-for="@Model.Name" class="text-danger"></span>
			</div>
			<div class="form-check">
				@Html.EditorFor(@Model =>Model.IsFavourite)
				@Html.LabelFor(@Model =>Model.IsFavourite)
				<span asp-validation-for="@Model.IsFavourite" class="text-danger"></span>
			</div>
			<br />
			<div class="form-check">
				@Html.EditorFor(@Model =>Model.IsHighlight)
				@Html.LabelFor(@Model =>Model.IsHighlight)
				<span asp-validation-for="@Model.IsHighlight" class="text-danger"></span>
			</div>
			<br />
			<div class="mb-3">
				<input class="btn btn-warning mb-2 w-100 p-3 fw-bold" type="submit" value="Add" />
			</div>
		</form>
	</div>
</div>


@section Scripts {
	<partial name="_ValidationScriptsPartial" />
}