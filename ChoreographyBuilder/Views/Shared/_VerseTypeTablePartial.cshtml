@model VerseTypeTableViewModel
<tr>
	<td>@Model.Name</td>
	<td>@Model.BeatCounts</td>
	<td>
		<form method="POST">
			@if (Model.IsActive)
			{
				<input type="submit" asp-controller="VerseType" asp-action="ChangeStatus" asp-route-id="@Model.Id" value="Deactivate" class="link-danger custominputlink" />
			}
			else
			{
				<input type="submit" asp-controller="VerseType" asp-action="ChangeStatus" asp-route-id="@Model.Id" value="Activate" class="link-success custominputlink" />
			}
		</form>
	</td>
	<td>
		@if (!Model.HasChoreographies)
		{
			<form method="GET">
				<input type="submit" asp-controller="VerseType" asp-action="Edit" asp-route-id="@Model.Id" value="Edit" class="link-warning custominputlink" />
			</form>
		}
	</td>
	<td>
		@if (!Model.HasChoreographies)
		{
			<form method="DELETE">
				<input type="submit" asp-controller="VerseType" asp-action="Delete" asp-route-id="@Model.Id" value="Delete" class="link-danger custominputlink" />
			</form>
		}
	</td>
</tr>
