@model FigureFormViewModel

<div class="row">
	<div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
		<form method="post">
			<div class="mb-3">
				<label asp-for="@Model.Name" class="form-label-add-edit"></label>
				<input asp-for="@Model.Name" class="form-control" aria-required="true" />
				<span asp-validation-for="@Model.Name" class="text-danger"></span>
			</div>
			<div class="form-check">
				<input asp-for="@Model.IsFavourite" type="checkbox"></input>
				<label asp-for="@Model.IsFavourite"> </label>
				<span asp-validation-for="@Model.IsFavourite" class="text-danger"></span>
			</div>
			<br />
			<div class="form-check">
				<input asp-for="@Model.IsHighlight" type="checkbox"></input>
				<label asp-for="@Model.IsHighlight"> </label>
				<span asp-validation-for="@Model.IsHighlight" class="text-danger"></span>
			</div>
			<br />
			<div class="form-check">
				<input asp-for="@Model.CanBeShared" type="checkbox"></input>
				<label asp-for="@Model.CanBeShared"> </label>
				<span asp-validation-for="@Model.CanBeShared" class="text-danger"></span>
			</div>
			<br />
			<div class="mb-3">
				<input class="btn btn-warning mb-2 w-100 p-3 fw-bold" type="submit" value="Save" />
			</div>
		</form>
	</div>
</div>
