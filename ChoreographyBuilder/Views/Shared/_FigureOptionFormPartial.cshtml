@model FigureOptionFormViewModel

<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <form method="post">
            <input type="hidden" asp-for="@Model.FigureId" />
            <input type="hidden" asp-for="@Model.FigureName" />
            <div class="mb-3">
                <label asp-for="@Model.StartPositionId" class="form-label-add-edit"></label>
                <select asp-for="@Model.StartPositionId" class="form-control" aria-required="true">
                    <option disabled selected value="">Select Position...</option>
                    @foreach (var position in Model.StartPositions)
                    {
                        <option value="@position.Id">@position.Name</option>
                    }
                </select>
                <span asp-validation-for="@Model.StartPositionId" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.EndPositionId" class="form-label-add-edit"></label>
                <select asp-for="@Model.EndPositionId" class="form-control" aria-required="true">
                    <option disabled selected value="">Select Position...</option>
                    @foreach (var position in Model.EndPositions)
                    {
                        <option value="@position.Id">@position.Name</option>
                    }
                </select>
                <span asp-validation-for="@Model.EndPositionId" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.BeatCounts" class="form-label-add-edit"></label>
                <input asp-for="@Model.BeatCounts" class="form-control" aria-required="true" rows="5" />
                <span asp-validation-for="@Model.BeatCounts" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.DynamicsType" class="form-label-add-edit"></label>
                <select asp-for="@Model.DynamicsType" class="form-control" aria-required="true">
                    <option disabled selected value="">Select Dynamics Type...</option>
                    @foreach (var dynamicsType in Model.DynamicsTypes)
                    {
                        <option value="@dynamicsType">@dynamicsType.ToString()</option>
                    }
                </select>
                <span asp-validation-for="@Model.DynamicsType" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <input id="save-action" class="btn btn-warning mb-2 w-100 p-3 fw-bold" type="submit" value="Save" />
            </div>
        </form>
    </div>
</div>
