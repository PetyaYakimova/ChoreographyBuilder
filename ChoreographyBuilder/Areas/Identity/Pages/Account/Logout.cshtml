@page
@model LogoutModel
@{
    ViewData["Title"] = "Log out";
}

<header>
    <h2>@ViewData["Title"]</h2>
    <hr />
    @{
        if (User.Identity?.IsAuthenticated ?? false)
        {
            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post">
                <button type="submit" class="btn btn-danger mb-2 w-100 p-3 fw-bold">Click here to Logout</button>
            </form>
        }
        else
        {
            <p>You have successfully logged out of the application. See you soon for you next choreographies.</p>
        }
    }
</header>
