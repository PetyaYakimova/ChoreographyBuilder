@model VerseTypeFormViewModel

<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <form method="post">
            <div class="mb-3">
                <label asp-for="@Model.Name" class="form-label-add-edit"></label>
                <input asp-for="@Model.Name" class="form-control" aria-required="true" />
                <span asp-validation-for="@Model.Name" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.BeatCounts" class="form-label-add-edit"></label>
                <input asp-for="@Model.BeatCounts" class="form-control" aria-required="true" rows="5" />
                <span asp-validation-for="@Model.BeatCounts" class="text-danger" id="BeatCounts-error"></span>
            </div>
            <div class="mb-3">
                <input id="save-action" class="btn btn-warning mb-2 w-100 p-3 fw-bold" type="submit" value="Save" />
            </div>
        </form>
    </div>
</div>
